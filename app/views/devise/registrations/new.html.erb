<html>
	<head>
		<title>Login and register</title>
	</head>
    <body class='index_body'>
      <div class='shade'>
        <div class="row mt-5">
          <div class="col-3"></div>
          <div class="col-6 login_Body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>
              <h1 class="alert-info btn-sm mb-4 text-center">CREATE ACCOUNT HERE</h1>
             
              <div class="row">
                <%= f.label :Username,:class=>'col-sm-3 col-form-label text-right form_lable' %>
                <div class='col-sm-9'>
                  <%= f.text_field :username, autofocus: true, autocomplete: "username",:class=>'form-control form-control-sm mb-2' %>
                </div>
              </div>

              <div class="row">
                <%= f.label :Mobile,:class=>'col-sm-3 col-form-label text-right form_lable' %>
                <div class='col-sm-9'>
                  <%= f.telephone_field :mobile, autofocus: true, autocomplete: "mobile",:class=>'form-control form-control-sm mb-2' %>
                </div>
              </div>

              <div class="row">
                <%= f.label :email,:class=>'col-sm-3 col-form-label text-right form_lable' %>
                <div class='col-sm-9'>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",:class=>'form-control form-control-sm mb-2' %>
                </div>
              </div>

              <div class="row">
                <%= f.label :password,:class=>'col-sm-3 col-form-label text-right form_lable' %>
                
                <div class='col-sm-9'>
                  <%= f.password_field :password, autofocus: true, autocomplete: "new-password",:class=>'form-control form-control-sm' %>
                  <% if @minimum_password_length %>
                <em class='alert-danger'>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                </div>
              </div>

              <div class="row">
                <%= f.label :pwd_confirm,:class=>'col-sm-3 col-form-label text-right form_lable' %>
                <div class='col-sm-9'>
                  <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password",:class=>'form-control form-control-sm mt-1 mb-3  ' %>
                  <%= f.submit "Sign up",:class=>'btn btn-warning form-control' %>
                  </div>
              </div>
            
              <div class='mt-3'> 
                <%= render "devise/shared/links" %>
              </div>

            <% end %>
          </div>
          <div class="col-3"></div>
        </div>
      </div>  
	</body>
</html>
